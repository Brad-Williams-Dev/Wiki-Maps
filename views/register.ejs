<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
    <title>Wiki-Map</title>

  </head>
  <body>
    <%- include('partials/_header') %>


    <form id="login-box" method="POST" action="/register">
      <h3>Register</h3>

       <!-- Name input -->
       <div class="form-outline mb-4">
        <input type="text" name = "name" for="name" id="form2Example1" class="form-control" />
        <label class="form-label" for="name">Name</label>
      </div>

      <!-- Email input -->
      <div class="form-outline mb-4">
        <input type="email" name = "email" for="email" id="form2Example1" class="form-control" />
        <label class="form-label" for="email">Email address</label>
      </div>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <input type="password" name = "password" for="password" id="form2Example2" class="form-control" />
        <label class="form-label" for="password">Password</label>
      </div>
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-secondary btn-block mb-4">Register</button>

      <!-- Register buttons -->
      <div class="text-center">
        <p>Already have an account? <a href="/login">Login</a></p>
      </div>
    </form>

  </body>
</html>
