<body>
  <%- include('partials/_header') %>
  <main>


    <div id="map1" style="width: 100%; height: 300px"></div>



          <div class="pin-element create-pin-maps">
            <form class="form-class" action="" method="POST">
              <h4>Edit a Marker 📍</h4>
              <label for="pinTitle" class="form-label">Edit Marker Title:</label>
              <input name="title" type="text" class="form-control" id="pin-title" placeholder="Edit marker title" value="<%= cardDetails.title %>">
              <div class="form-element">
                <label for="pinDescription" class="form-label">Edit Marker Description:</label>
                <textarea name="description" type="text" class="form-control" id="pin-description" placeholder="Edit description of your Marker..."><%= cardDetails.description %></textarea>
              </div>
              <div class="form-element">
                <label for="pinPicture" class="form-label">Edit Marker Picture:</label>
                <input name="url" type="text" class="form-control" id="pin-img" placeholder="Enter Image URL">

                <div>
                  <label for="longitude" class="form-label">Longitude:</label>
                  <input name="longitude" type="text" class="form-control" id="longitude" placeholder="Longitude" value="<%= cardDetails.longitude %>"></input>
                </div>

                <div>
                  <label for="latitude" class="form-label">Latitude:</label>
                  <input name="latitude" type="text" class="form-control" id="latitude" placeholder="Latitude" value="<%= cardDetails.latitude %>"></input>
                </div>
                <br>

                <button type="submit" class="btn btn-primary">Edit Marker</button>
              </div>
            </div>
          </form>

          <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCi0UNccMZtRgqrzVxdyFxtulpy_amoMGY&callback=initMap"
          async defer></script>
  </main>


