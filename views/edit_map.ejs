<!DOCTYPE html>
<html lang="en">

<head>
 <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <title>Create a Map</title>


  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/createmap.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

</head>
<body>
  <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCi0UNccMZtRgqrzVxdyFxtulpy_amoMGY&callback=initMap">
    </script>
  <%- include('partials/_header') %>
  <main>
    <div id="main-box">
    <div id="map-box">
      <div class="map-class" data-lon=<%= maps.longitude %>
        data-lat=<%= maps.latitude %> id=<%= maps.id %>
        style="width: 800px; height: 600px">
      </div>
    </div>
          <div class="pin-element create-pin-maps">
            <form class="form-class" action="" method="POST">
              <h4>Edit a Marker üìç</h4>
              <label for="pinTitle" class="form-label">Edit Marker Title:</label>
              <input name="title" for="title" type="text" class="form-control" id="pin-title" placeholder="Edit marker title" value="<%= maps.title %>">
              <div class="form-element">
                <label for="pinDescription" class="form-label">Edit Marker Description:</label>
                <textarea name="description" for="description" type="text" class="form-control" id="pin-description" placeholder="Edit description of your Marker..."><%= maps.description %></textarea>
              </div>
              <div class="form-element">
                <label for="pinPicture" class="form-label">Edit Marker Picture:</label>
                <input name="url" type="text" class="form-control" id="pin-img" placeholder="Enter Image URL">

                <div>
                  <label for="longitude" class="form-label">Longitude:</label>
                  <input name="longitude" for="longitude" type="text" class="form-control" id="longitude" placeholder="Longitude" value="<%= maps.longitude %>"></input>
                </div>

                <div>
                  <label for="latitude" class="form-label">Latitude:</label>
                  <input name="latitude" for="latitude" type="text" class="form-control" id="latitude" placeholder="Latitude" value="<%= maps.latitude %>"></input>
                </div>
                <br>

                <button type="submit" class="btn btn-primary">Edit Marker</button>
              </div>
            </div>
            </div>
          </form>


  </main>

<script>
  $(document).ready(function() {
    const maps = $(".map-class")
    maps.each(function(index) {
      const mapId = $( this ).attr("id")
      const mapLat = $( this ).attr("data-lon")
      const mapLon = $( this ).attr("data-lat")
      initMap(Number(mapLat), Number(mapLon), mapId)
    });
    });
    </script>

</body>
</html>


